@model IEnumerable<Trial.Models.Modules>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassHrsPerWeek)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalhoursOfStudy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RemainingHoursOfStudy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Studentid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfCredits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassHrsPerWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalhoursOfStudy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RemainingHoursOfStudy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Studentid)
            </td>
            <td>
                    @Html.ActionLink("StudySessions", "StudySessions", new { id = item.Code }) |
                    @Html.ActionLink("Graph", "Graph", new { id = item.Code }) |
                
            </td>
        </tr>
}
    </tbody>
